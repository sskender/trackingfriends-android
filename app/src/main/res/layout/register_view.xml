<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Password:"
            android:layout_width="107dp"
            android:layout_height="41dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:id="@+id/passwordTextView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/usernameTextView" android:textSize="18sp"/>
    <TextView
            android:text="Repeat password:"
            android:layout_width="109dp"
            android:layout_height="47dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:id="@+id/password2TextView"
            app:layout_constraintTop_toBottomOf="@+id/passwordTextView" android:layout_marginTop="16dp"
            android:textSize="18sp"/>
    <TextView
            android:text="E-mail:"
            android:layout_width="107dp"
            android:layout_height="39dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:id="@+id/emailTextView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/password2TextView" android:textSize="18sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameRegister" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/usernameTextView"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.697"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailRegister"
            app:layout_constraintStart_toEndOf="@+id/passwordTextView" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/usernameRegister"/>
    <EditText
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordOneRegister"
            app:layout_constraintStart_toEndOf="@+id/password2TextView" android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/emailRegister" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.638"/>
    <EditText
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTwoRegister" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordOneRegister" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/emailTextView" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.676"/>
    <TextView
            android:text="Username"
            android:layout_width="107dp"
            android:layout_height="39dp"
            android:id="@+id/usernameTextView"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textSize="18sp"/>
    <Button
            android:text="REGISTER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/registerButton" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/emailTextView" android:layout_marginEnd="172dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="164dp"
            android:layout_marginBottom="83dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold" android:textSize="30sp"/>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="213dp"
            android:src="@drawable/pic" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/usernameRegister" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView4"/>
</android.support.constraint.ConstraintLayout>